@page
@model HospiEnCasa.App.Presentacion.Pages_VMedicos.CreateModel
@{
}

<h1>Registrar medico </h1>
<form method= "post">
   <div asp-validation-sumary="ModelOnly"></div>

  <div class="form-group">
    <label>Nombre</label>
    <input asp-for="Medico.Nombre" class="form-control"/>
    </div>

    <div class="form-group">
    <label>Apellidos</label>
    <input asp-for="Medico.Apellidos" class="form-control"/>
    </div>

    <div class="form-group">
    <label>Número de Teléfono</label>
    <input asp-for="Medico.NumeroTelefono" class="form-control"/>
    </div>

    <div class="form-group">
    <label>Género</label>
    <select asp-for="Medico.Genero" class="form-control">
    <option selected>Seleccione el Género</option>
    <option value=0>Femenino</option>
    <option value=1>Masculino</option>
    </select>
    </div>

    <div class="form-group">
    <label>Código</label>
    <input asp-for="Medico.Codigo" class="form-control"/>
    </div>

  <div class="form-group">
    <label>Registro Rethus</label>
    <input asp-for="Medico.RegistroRethus" class="form-control"/>
  </div>

  <button type="submit" class="btn btn-primary" asp-page-handler="Save">Crear</button>

</form>